cxx.std = latest
cxx.features.modules = true

using cxx

hxx{*}: extension = hpp
ixx{*}: extension = inl
cxx{*}: extension = cpp

hxx{*}: cxx.importable = false

exe{*}: test = true

test.target = $cxx.target

# Import GLM by default.
#
import! [metadata, rule_hint=cxx.link] lib = glm%lib{glm}
modules_supported = [bool] $($lib: glm.modules_supported)
